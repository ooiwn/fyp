<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SymptomCheck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="My current mood: "
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/sad_mood"
                android:layout_marginTop="10dp" />

            <ImageView
                android:id="@+id/normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/moderate_mood"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/happy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/happy_mood"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/veryHappy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/very_happy_mood"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/bad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Bad"
                android:textSize="20dp"
                android:layout_weight="1"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/moderate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Moderate"
                android:textSize="20dp"
                android:layout_weight="1"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/good"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Good"
                android:textSize="20dp"
                android:layout_weight="1"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/veryGood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Very Good"
                android:textSize="20dp"
                android:layout_weight="1"
                android:textAlignment="center"/>

        </LinearLayout>

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>